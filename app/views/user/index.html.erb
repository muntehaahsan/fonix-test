<div class="container">
  <%= form_tag user_code_path ,{:class => 'form-signin'} do %>
    <h2 class="form-signin-heading">Enter your mobile number:</h2>
    <%= label_tag 'Mobile number', 'mobile number', class:'sr-only' %>
    <%= telephone_field_tag :phone, nil, class:'form-control' %>
    <%= submit_tag  :Confirm, class: 'btn btn-lg btn-primary btn-block'%>
  <% end %>
</div>


